<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Título"
        android:textColor="@android:color/background_dark"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgvLogoActual"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/logoceltics" />

    <ImageView
        android:id="@+id/imgvLogoHistorico"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imgvLogoActual"
        android:layout_marginEnd="24dp"
        app:srcCompat="@mipmap/logoceltics2" />

    <TextView
        android:id="@+id/tvHistorico"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imgvLogoHistorico"
        android:layout_below="@+id/tvEquipo"
        android:layout_marginEnd="14dp"
        android:text="Escudo Histórico"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tvDetalleEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgvLogoActual"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tvActual"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/tvHistorico"
        android:layout_alignBottom="@+id/tvHistorico"
        android:layout_alignEnd="@+id/imgvLogoActual"
        android:layout_marginEnd="10dp"
        android:text="Escudo Actual"
        android:textColor="@android:color/background_dark" />
</RelativeLayout>